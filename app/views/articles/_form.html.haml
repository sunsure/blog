= simple_form_for @article do |f|
  = f.error_notification

  = f.input :title, wrapper: :bootstrap
  = f.input :permalink
  = f.input :excerpt, as: :text, input_html: { rows: 10, class: "col-sm-9" }
  = f.input :content, as: :text, input_html: { rows: 25, class: "col-sm-9" }

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.button :submit, class: 'btn btn-primary'
